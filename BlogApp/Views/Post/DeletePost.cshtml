@model PostModel;

<div class="col-lg-12">
    <div class="bg-white p-4">
        <h2 class="mb-3 h5"><b>"@Model.Title"</b> bu gönderiyi silmek istediğinize emin misiniz?</h2>
        <hr>

        <img src="~/img/@Model.Image" class="img-fluid"
            style="max-width: 200px; max-height: 150px; object-fit: cover;" />
        <p>@Html.Raw(@Model.Content)</p>

        <form asp-controller="Post" asp-action="DeletePost" method="post">
            <input type="hidden" asp-for="PostId" />
            <button type="submit" class="btn btn-danger btn-sm mt-2">Evet</button>
            <a asp-controller="Post" asp-action="PostList" class="btn btn-primary btn-sm mt-2">Hayır</a>
        </form>
    </div>
</div>